- var classtdMain = ['pad-table', 'non-border', 'limit']
- var classtdEspecific = ['pad-con-table', 'non-border']

mixin equiposPartido(horario1, horario2, horario3, equipo1, equipo2, equipo3, equipo4, equipo5, equipo6, vs, vs2, vs3)
	tr
		td(class=classtdMain)
			table.no-margin
				td(class=classtdEspecific).hours= horario1
				td(class=classtdEspecific).teamys= equipo1
				td(class=classtdEspecific).vs= vs
				td(class=classtdEspecific).teamys= equipo2
		td(class=classtdMain)
			table.no-margin
				td(class=classtdEspecific).hours= horario2
				td(class=classtdEspecific).teamys= equipo3
				td(class=classtdEspecific).vs= vs2
				td(class=classtdEspecific).teamys= equipo4
		td(class=classtdMain)
			table.no-margin
				td(class=classtdEspecific).hours= horario3
				td(class=classtdEspecific).teamys= equipo5
				td(class=classtdEspecific).vs= vs3
				td(class=classtdEspecific).teamys= equipo6
mixin jornadas(jor1, jor2, jor3, fecha1, fecha2, fecha3)
	thead
		tr
			th(class=classtdMain).jornadas  
				.tit-jornada.font-24px= jor1
				.subtit-jornada.font-18px= fecha1
			th(class=classtdMain).jornadas  
				.tit-jornada.font-24px= jor2
				.subtit-jornada.font-18px= fecha2
			th(class=classtdMain).jornadas 
				.tit-jornada.font-24px= jor3
				.subtit-jornada.font-18px= fecha3
mixin ranking(puesto, equipo, color)
	.contenedor-mov.black
		.contenedor_hover(class=color"1")
			.puesto= puesto
		.equipo-lugar(class=color) 
			.expandir.font-14px Ver
			.equipos-ranki equipo

section#calendario.al100.page-scroll.total-container
	.centerbottom-top.pos-absoluta.column-10
		.contenedor-calendar.centerbottom-top
			table.calendar-table.no-margin
				+jornadas("JORNADA 1", "JORNADA 2", "JORNADA 3", "Lunes, 16 de Junio", "Martes, 17 de Junio", "Jueves, 19 de Junio")
