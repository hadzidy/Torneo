					+equiposPartido(horarios.uno, horarios.uno, horarios.uno, equipo1.name, equipo2.name, equipo4.name, equipo5.name, equipo3.name, equipo6.name, "vs", "vs", "vs") 
					+equiposPartido(horarios.dos, horarios.dos, horarios.dos, equipo3.name, equipo4.name, equipo2.name, equipo6.name, equipo1.name, equipo4.name, "vs", "vs", "vs") 
