					.modal-content.noRoundBorders
						.modal-header
							button(type="button" data-dismiss="modal" aria-hidden="true").close
							h4.modal-title#myModalLabel About team
						.modal-body#ckTeam		
							img(src="img/ck.png").team-pic
							h3 #{equipo1.name}
							p Marcela / Jader / Javi / Pablo / Robert
							.float-L.partidos= pg
								.score.font-24px 2
							.float-R.partidos= pl
								.score.font-24px 0  
						.modal-footer
							center
								button(type="button" data-dismiss="modal").btn.btn-default Cerrar
